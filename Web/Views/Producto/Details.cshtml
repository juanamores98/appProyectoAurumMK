@model Infraestructure.Models.Producto

@{
    ViewBag.Title = "Mantenimiento Producto";
}
<div class="row" style="margin-left: 0px !important; margin-right: 0px !important;">
    <div class="col-lg-3" style="background: #1d2554;">
        @Html.Partial("_MenuMantenimiento")
    </div>
    <div class="col-xl-9">
        <div class="container">
            <hr>
            <h1>Detalle Producto <span class="badge bg-info">@Html.DisplayFor(model => model.IdProducto)</span> | @Html.ActionLink("Editar", "Edit", new { id = Model.IdProducto }, new { @class = "btn  boton-estilo" })| @Html.ActionLink("Desactivar", "Deactivate", new { id = Model.IdProducto }, new { @class = "btn  boton-estilo" })</h1> <hr>
            <div class="row">
                <div class="col-xl-3">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h5 class="text-primary m-0 fw-bold">Informacion</h5>
                        </div>
                        <div class="card-body">
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.IdProducto)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.IdProducto)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Nombre)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.CostoU)
                                </dt>

                                <dd>
                                    ¢@Html.DisplayFor(model => model.CostoU)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.EstadoSistema)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.EstadoSistema.Descripcion)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.CategoriaProducto)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.CategoriaProducto.Descripcion)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h5 class="text-primary m-0 fw-bold">Imagen</h5>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center no-gutters">
                                <div class="col">
                                    <img src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(Model.Imagen)" role="img" alt="Libro @Html.DisplayNameFor(model => model.Nombre)" class="bd-placeholder-img" width="200" height="250">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h5 class="text-primary m-0 fw-bold">Proveedores</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("ID")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Nombre")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Telefono")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Direccion")
                                        </th>
                                        <th>
                                            @Html.DisplayName("País")
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in (List<Infraestructure.Models.Proveedor>)ViewBag.listaProveedor)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdProveedor)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Telefono)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Direccion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pais)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Detalle", "Details", "Proveedor", new { id = item.IdProveedor }, new { @class = "btn  boton-estilo" })
                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h5 class="text-primary m-0 fw-bold">Inventarios</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("ID")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Stock Minimo")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Stock")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Estante")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Sucursal Nombre")
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in (List<Infraestructure.Models.InventarioProducto>)ViewBag.listaInventarioProducto)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdInventario)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StockMinimo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Stock)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Estante)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Inventario.Sucursal.Nombre)
                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <p>
                @Html.ActionLink("Regresar a lista", "Index", null, new { @class = "btn  boton-estilo" })
            </p>
        </div>
    </div>
</div>
