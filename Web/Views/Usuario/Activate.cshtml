@model IEnumerable<Infraestructure.Models.Usuario>

@{ ViewBag.Title = "Usuario"; }


<div class="row" style="margin-left: 0px !important; margin-right: 0px !important;">
    <div class="col-lg-3" style="background: #1d2554;">
        @Html.Partial("_MenuMantenimiento")
    </div>
    <div class="col-xl-9">
        <div class="container">
            <hr>
            <h1>Lista de usuarios desactivados</h1>
            <hr>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h5 class="text-primary m-0 fw-bold">Usuarios</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IdUsuario)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nombre)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Correo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Telefono)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Direccion)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EstadoSistema.Descripcion)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TipoUsuario.Descripcion)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in (List<Infraestructure.Models.Usuario>)ViewBag.listaUsuariosDesactivados)
                                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Correo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EstadoSistema.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoUsuario.Descripcion)
                            </td>
                            <td>
                                @Html.ActionLink("Activar", "ActivarConfirmado", "Usuario", new { idUsuario = item.IdUsuario }, new { @class = "btn  boton-estilo", onclick = "return sweetConfirm()" })
                            </td>
                        </tr>
}

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                @Html.ActionLink("Regresar a lista", "Index", null, new { @class = "btn  boton-estilo" })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>function sweetConfirm() {
            
                swal({
                    title: "¿Está seguro de editar este producto?",
                    buttons: {
                        cancel: "Cancelar",
                        confirm: {
                            text: "Aceptar",
                            className: "boton-estilo"
                        }
                    }
                }).then(val => {
                    if (val) {
                        return true;
                    } else {
                        return false;
                    }
                });
            }
        </script>
    }
