@model Infraestructure.Models.Color

@{
    ViewBag.Title = "Mantenimiento Color";
}

<div class="row" style="margin-left: 0px !important; margin-right: 0px !important;">
    <div class="col-lg-3" style="background: #1d2554;">
        @Html.Partial("_MenuMantenimiento")
    </div>
    <div class="col-xl-9">
        <div class="container">
            <hr>
            <h1>Editar Color <span class="badge bg-info">@Html.DisplayFor(model => model.Descripcion)-@Html.DisplayFor(model => model.Codigo)</span></h1>
            <hr>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h5 class="text-primary m-0 fw-bold">Color</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Save", "Color", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.IdColor)
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row" style="margin-left: 15px !important; margin-right: 0px !important;">
                                <div class="col">
                                    <div class="row">
                                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label " })
                                    </div>
                                    <div class="row">
                                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col" style="padding-left:40px;">
                                    <div class="row">
                                        <label>Seleccione el color a guardar</label>
                                    </div>
                                    <div class="row">
                                        <input style="height:35px; border: 1px; box-shadow: 0.5px 0.5px 3px #000000 ;" id="color-picker" name="codigoColor" value="@Html.DisplayFor(model => model.Codigo)" />
                                    </div>

                                </div>

                            </div>


                            <hr />


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Editar Color" class="btn boton-estilo" onclick="confirm('¿Está seguro de editar este color?');" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div>
                @Html.ActionLink("Regresar a lista", "Index", null, new { @class = "btn  boton-estilo" })
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")}
